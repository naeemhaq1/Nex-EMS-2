{
  "name": "nexlinx-ems",
  "version": "1.0.0",
  "description": "NEXLINX Employee Management System",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "tsx watch index.ts",
    "client": "vite",
    "build": "tsc && vite build",
    "start": "node index.js",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@neondatabase/serverless": "^0.9.0",
    "@types/express": "^4.17.21",
    "@types/node": "^20.0.0",
    "express": "^4.18.2",
    "drizzle-orm": "^0.30.0",
    "drizzle-kit": "^0.20.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0",
    "concurrently": "^8.2.2",
    "vite": "^5.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.0.0"
  }
}