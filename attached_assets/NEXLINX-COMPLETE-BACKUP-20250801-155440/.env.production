# NEXLINX EMS - Production Environment Configuration
# Copy this to .env and configure with your actual values

# Database Configuration (REQUIRED)
DATABASE_URL=postgresql://username:password@host:port/nexlinx_ems

# Application Configuration
NODE_ENV=production
PORT=5000

# WhatsApp Business API Configuration (if using WhatsApp features)
WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token
WHATSAPP_BUSINESS_ACCOUNT_ID=your_business_account_id
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your_webhook_verify_token

# Email Configuration (for reports)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Security
SESSION_SECRET=generate_a_secure_random_string_here

# External API Configuration
BIOTIME_API_URL=http://202.59.80.69/employees.aspx
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Replit Configuration (for Replit deployment)
REPL_ID=your_repl_id
REPLIT_DOMAINS=your-repl-name.repl.dev
